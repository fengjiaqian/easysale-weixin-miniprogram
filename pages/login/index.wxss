view {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.4;
    overflow: hidden;
    z-index: 999;
    color: #fff;
}

.commodity_attr_box {
    width: 100%;
    overflow: hidden;
    position: fixed;
    width: 600rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1000;
    background: #fff;
    border-radius: 16rpx;
}

.info-content {
    position: relative;
    padding-bottom: 64rpx;
}

.info-content .background {
    width: 100%;
    height: 240rpx;
}

.info-content .log {
    width: 92rpx;
    height: 92rpx;
    position: absolute;
    top: 64rpx;
    left: 50%;
    transform: translateX(-50%);
}

.info-content button {
    width: 480rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin: 40rpx 70rpx 0;
    background: rgba(255, 86, 56, 1);
    font-size: 36rpx;
    color: #fff;
}

.explain {
    margin: 60rpx 70rpx 0;
    font-size: 30rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 42rpx;
    text-align: center
}

