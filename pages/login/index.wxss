view {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 999;
  color: #fff;
}

.commodity_attr_box {
  overflow: hidden;
  position: fixed;
  width: 600rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
  background: #fff;
  border-radius: 16rpx;
}

.info-content {
  position: relative;
  padding-bottom: 64rpx;
}

.info-content .background {
  width: 100%;
  height: 240rpx;
}

.info-content .log {
  width: 92rpx;
  height: 92rpx;
  position: absolute;
  top: 64rpx;
  left: 50%;
  transform: translateX(-50%);
}

.info-content button {
  width: 480rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 40rpx 70rpx 0;
  background: rgba(255, 86, 56, 1);
  font-size: 36rpx;
  color: #fff;
}

.explain {
  margin: 60rpx 70rpx 0;
  font-size: 30rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 42rpx;
  text-align: center;
}

/***/

.login-banner-wrap {
  position: relative;
  width: 100%;
  height: 468rpx;
}

.login-banner-wrap .ic-banner {
  width: 100%;
  height: 468rpx;
}

.wave {
  position: absolute;
  z-index: 3;
  right: 0;
  bottom: 0;
  opacity: 0.725;
  height: 130rpx;
  width: 2250rpx;
  animation: wave 10s linear infinite;
}

.wave-bg {
  z-index: 1;
  animation: wave-bg 11s linear infinite;
}

@keyframes wave {
  from {
    transform: translate3d(125rpx, 0, 0);
  }

  to {
    transform: translate3d(1125rpx, 0, 0);
  }
}

@keyframes wave-bg {
  from {
    transform: translate3d(375rpx, 0, 0);
  }

  to {
    transform: translate3d(1375rpx, 0, 0);
  }
}

.login-page .ic-txt {
  display: block;
  margin: 80rpx auto 0;
  width: 420rpx;
  height: 160rpx;
}

.login-page .btn {
  width: 468rpx;
  height: 90rpx;
  margin-top: 80rpx;
  background: rgba(255, 86, 56, 1);
  border-radius: 46rpx;
  font-size: 34rpx;
  line-height: 90rpx;
  color: #fff;
}

.copy-right {
  position: absolute;
  left: 0;
  bottom: 32rpx;
  width: 100%;
  font-size: 24rpx;
  text-align: center;
}
